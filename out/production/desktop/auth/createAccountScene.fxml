<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="auth.Controller">
   <children>
      <ImageView fitHeight="150.0" fitWidth="347.0" layoutX="50.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@logo3.png" />
         </image>
      </ImageView>
      <Label layoutX="84.0" layoutY="188.0" text="Email">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="66.0" layoutY="237.0" text="Username">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="69.0" layoutY="298.0" text="Password">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="signUpButton" layoutX="234.0" layoutY="382.0" mnemonicParsing="false" text="Sign up">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="returnButton" layoutX="96.0" layoutY="382.0" mnemonicParsing="false" onAction="#switchToMainScene" text="Return">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TextField fx:id="emailTextField" layoutX="180.0" layoutY="189.0" prefHeight="25.0" prefWidth="160.0" />
      <TextField fx:id="usernameTextField" layoutX="180.0" layoutY="238.0" prefHeight="25.0" prefWidth="160.0" />
      <TextField fx:id="passwordTextField" layoutX="180.0" layoutY="299.0" prefHeight="25.0" prefWidth="160.0" />
   </children>
</AnchorPane>
